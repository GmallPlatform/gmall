div(class=dj[key].wrapclass)
    div(class=mobileWrapper)
        div(class="slide-zoom col-lg-6 col-md-6 col-sm-6 col-xs-12",set-animate=dj[key].animate,data-animation=dj[key].animate,data-animation-repeat=dj[key].animateRepeat,data-animation-delay=dj[key].animateDelay)
            if(dj[key].name)
                h3(set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)=dj[key].name
            if(dj[key].arrowDownDiv)
                arrow-down
            div(id=dj[key].id,home-page-stuff-owl="owlslider"+dj[key]._id,zoom-img='true',items=dj[key].qwslide,autoplay=dj[key].autoPlaySlider,duration=dj[key].duration)
                div(class="nav-left")
                    i(class="icon-prev-img")
                div(class="owl-carousel owl-theme",id="owlslider" + dj[key]._id)
                    if(dj[key].imgs && dj[key].imgs.length)
                        - for (var i = 0; i < dj[key].imgs.length; i++)
                            if(dj[key].imgs[i].actived)
                                div()
                                    a(href=dj[key].imgs[i].link)
                                        img(class="img-responsive",src=photoHost + '/' + dj[key].imgs[i].img,alt=dj[key].imgs[i].alt,ng-swipe-left="slideswipeLeft()",ng-swipe-right="slideswipeRight()")
                                        div(class="half-shadow")
                                            div(class="title-block")
                                                if(dj[key].imgs[i].name)
                                                    h1(class="banner-header",set-animate=dj[key].nameAnimate,data-animation=dj[key].nameAnimate)
                                                        | !{dj[key].imgs[i].name}
                                                if(dj[key].imgs[i].desc)
                                                    div(class="banner-desc")
                                                        | !{dj[key].imgs[i].desc}

                div(class="clearfix")
                div(class="nav-right")
                    i(class="icon-next-img")
